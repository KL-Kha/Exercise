<form enctype="multipart/form-data" id="form-multi-pictures" role="form">
  <div class="m-auto card w-75">
    <div class="card-header">
      <h1 class="text-center text-success">Upload multi pictures and add note to
        each picture.</h1>
    </div>
    <div class="card-body">

      <div class="row pl-5">
        <div class="col-md-10">
          <input
            id="file-placeholder"
            class="form-control"
            readonly
            placeholder="Chưa có ảnh nào được chọn"
          />

          <!-- List file ảnh ở đây -->
          <div id="custom-file-list" class="custom-file-list">
          </div>
        </div>

        <div id="operation-div" class="col-md-2">
          <label class="btn btn-primary" for="image-uploaded">
            <i class="fas fa-plus"></i>
          </label>

          <input
            hidden
            multiple
            type="file"
            name="image-uploaded[]"
            accept="image/*"
            id="image-uploaded"
          />
        </div>
      </div>
    </div>
    <div class="card-footer">
    </div>
  </div>
</form>
<script src="/js/uploadFile.js"></script>